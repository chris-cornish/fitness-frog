@model IEnumerable<FitnessFrog.Core.Domain.Note>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h3 class="title">Notes</h3>
                        <h6><a asp-action="Create">+ Create New</a></h6>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table table-hover">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreationDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ModificationDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NoteDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NoteText)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NoteType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NoteTypeId)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModificationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoteDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoteText)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoteType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoteTypeId)
                                        </td>

                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                    Edit/Del/Det
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu" aria-labeledby="dropdownMenu1">
                                                    <li>
                                                        <a asp-action="Edit" asp-route-id="@item.NoteId">Edit</a>
                                                    </li>
                                                    <li>
                                                        <a asp-action="Details" asp-route-id="@item.NoteId">Details</a>
                                                    </li>
                                                    <li>
                                                        <a asp-action="Delete" asp-route-id="@item.NoteId">Delete</a>
                                                    </li>
                                                </ul>
                                            </div>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>