@model FitnessFrog.Core.Domain.Food

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Food</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="FoodId" />
        <input type="hidden" asp-for="CreationDate" />
        <input type="hidden" asp-for="ModificationDate" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="DayId" />
        
        
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Proteins" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Proteins" class="form-control" />
                <span asp-validation-for="Proteins" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Carbs" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Carbs" class="form-control" />
                <span asp-validation-for="Carbs" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Fats" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Fats" class="form-control" />
                <span asp-validation-for="Fats" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Calories" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-offset-4">
            <input type="submit" class="btn btn-primary btn-sm" value="Back to list" asp-action="Index" />
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
