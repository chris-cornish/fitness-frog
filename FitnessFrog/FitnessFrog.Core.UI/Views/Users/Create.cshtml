@model FitnessFrog.Core.Domain.User

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal container">
        <h4>User</h4>
        <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="CreationDate"/>*@

        <div class="form-group">
            <label asp-for="EmailAddress" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="EmailAddress" class="form-control" type="email"/>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <div class="checkbox">
                    <input asp-for="Enabled"/>
                    <label asp-for="Enabled"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastLoginDate" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="LastLoginDate" class="form-control"/>
                <span asp-validation-for="LastLoginDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastLoginIp" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="LastLoginIp" class="form-control"/>
                <span asp-validation-for="LastLoginIp" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModificationDate" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="ModificationDate" class="form-control"/>
                <span asp-validation-for="ModificationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PasswordRecoveryAnswer" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="PasswordRecoveryAnswer" class="form-control"/>
                <span asp-validation-for="PasswordRecoveryAnswer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PasswordRecoveryQuestion" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="PasswordRecoveryQuestion" class="form-control"/>
                <span asp-validation-for="PasswordRecoveryQuestion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
        <div class="col-md-offset-4">
            <input type="submit" class="btn btn-primary btn-sm" value="Back to list" asp-action="Index" />
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
