@model FitnessFrog.Core.Domain.Exercise

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Exercise</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ExerciseId" />
        <input type="hidden" asp-for="CreationDate"/>
        <input type="hidden" asp-for="ModificationDate"/>
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="DayId" />

        <div class="form-group">
            <label asp-for="ExerciseType" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="ExerciseType" class="form-control" asp-items="ViewBag.ExerciseType"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ExerciseName" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="ExerciseName" class="form-control" />
                <span asp-validation-for="ExerciseName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Reps" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sets" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UnitType" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="UnitType" class="form-control" asp-items="ViewBag.UnitType"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-offset-4">
            <input type="submit" class="btn btn-primary btn-sm" value="Back to list" asp-action="Index" />
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
