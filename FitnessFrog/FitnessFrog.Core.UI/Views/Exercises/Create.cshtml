@model FitnessFrog.Core.Domain.Exercise

@{
    ViewData["Title"] = "Create";
}

<h2>Create new: </h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Exercise</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        @*<input type="hidden" asp-for="DayId" />
        <input type="hidden" asp-for="UserId" />*@
        <input type="hidden" asp-for="CreationDate" />
        <input type="hidden" asp-for="ModificationDate" />
        
        <div class="form-group">
            <label asp-for="DayId" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="DayId" class="form-control" asp-items="ViewBag.DayId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserId" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ExerciseType" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="ExerciseType" class="form-control" asp-items="ViewBag.ExerciseType"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Reps" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sets" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UnitType" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="UnitType" class="form-control" asp-items="ViewBag.UnitType"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-offset-4">
            <input type="submit" class="btn btn-primary btn-sm" value="Back to list" asp-action="Index" />
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
            jQuery(function () {
                jQuery('.datepicker').datepicker();
            });
    </script>
}
